# App
NODE_ENV=development
PORT=4000

# PostgreSQL (point these to your pgAdmin-managed DB)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=car_rental

# Sessions / Cookies
SESSION_COOKIE_NAME=crsid
SESSION_SECRET=replace_with_32plus_random_chars
SESSION_SAMESITE=lax
SESSION_SECURE=false   # set true in production (HTTPS)

# CSRF
CSRF_SECRET=replace_with_32plus_random_chars

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=5

# CORS
CORS_ORIGIN=http://localhost:3000
